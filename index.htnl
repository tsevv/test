<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>RAW Threads</title>
  <style>
    * {
      box-sizing: border-box;
    }
    body {
      margin: 0;
      font-family: 'Segoe UI', sans-serif;
      background: #0f0f0f;
      color: #fff;
    }
    header {
      background: #000;
      padding: 1em;
      text-align: center;
      position: sticky;
      top: 0;
      z-index: 1000;
      box-shadow: 0 2px 5px #e91e63;
    }
    nav {
      margin-top: 0.5em;
    }
    nav a {
      margin: 0 1em;
      color: #e91e63;
      text-decoration: none;
      font-weight: bold;
      cursor: pointer;
      transition: color 0.3s;
    }
    nav a:hover {
      color: #fff;
    }
    .section {
      display: none;
      padding: 2em;
      animation: fadeIn 0.5s ease-in-out;
    }
    .section.active {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 2em;
    }
    .product {
      background: #1a1a1a;
      padding: 1em;
      border-radius: 10px;
      box-shadow: 0 0 10px #e91e63;
      text-align: center;
      transition: transform 0.3s;
    }
    .product:hover {
      transform: scale(1.05);
    }
    .product img {
      width: 100%;
      max-height: 200px;
      object-fit: contain;
      background: transparent;
      border-radius: 8px;
    }
    .btn {
      background: #e91e63;
      color: #fff;
      padding: 0.5em 1em;
      border: none;
      margin-top: 1em;
      cursor: pointer;
      border-radius: 5px;
      transition: background 0.3s;
    }
    .btn:hover {
      background: #ff4081;
    }
    #cartModal {
      position: fixed;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%) scale(0);
      background: #222;
      padding: 2em;
      border-radius: 10px;
      z-index: 9999;
      max-width: 400px;
      width: 90%;
      transition: transform 0.3s ease-in-out;
    }
    #cartModal.active {
      transform: translate(-50%, -50%) scale(1);
    }
    #cartModal h3 {
      margin-top: 0;
      color: #e91e63;
    }
    #cartItems li {
      margin: 0.5em 0;
      list-style: none;
    }
    #closeCart {
      background: #555;
      margin-top: 1em;
    }
    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }
  </style>
</head>
<body>
  <header>
    <h1>RAW THREADS</h1>
    <nav>
      <a onclick="showSection('sp5der')">Sp5der</a>
      <a onclick="showSection('hellstar')">Hellstar</a>
      <a onclick="showSection('chrome')">Chrome Hearts</a>
      <a onclick="openCart()">Cart</a>
    </nav>
  </header>

  <div id="sp5der" class="section active">
    <div class="product" data-name="Sp5der Web Hoodie" data-price="105">
      <h2>Sp5der Web Hoodie</h2>
      <img src="https://images.stockx.com/images/Sp5der-Web-Hoodie-Black.png" alt="Sp5der Hoodie" />
      <button class="btn" onclick="addToCart(this)">Add to Cart - $105</button>
    </div>
  </div>

  <div id="hellstar" class="section">
    <div class="product" data-name="Hellstar Flame Hoodie" data-price="105">
      <h2>Hellstar Flame Hoodie</h2>
      <img src="https://images.stockx.com/images/Hellstar-Future-Flame-Hoodie-Grey.png" alt="Hellstar Hoodie" />
      <button class="btn" onclick="addToCart(this)">Add to Cart - $105</button>
    </div>
  </div>

  <div id="chrome" class="section">
    <div class="product" data-name="Chrome Hearts Cross Hoodie" data-price="105">
      <h2>Chrome Hearts Cross Hoodie</h2>
      <img src="https://images.stockx.com/images/Chrome-Hearts-Triple-Cross-Zip-Hoodie.png" alt="Chrome Hearts Hoodie" />
      <button class="btn" onclick="addToCart(this)">Add to Cart - $105</button>
    </div>
  </div>

  <div id="cartModal">
    <h3>Your Cart</h3>
    <ul id="cartItems"></ul>
    <p id="cartTotal">Total: $0</p>
    <button class="btn" id="closeCart" onclick="closeCart()">Close</button>
  </div>

  <script>
    function showSection(id) {
      document.querySelectorAll('.section').forEach(sec => sec.classList.remove('active'));
      document.getElementById(id).classList.add('active');
    }

    const cart = [];

    function addToCart(button) {
      const product = button.closest('.product');
      const name = product.dataset.name;
      const price = parseFloat(product.dataset.price);
      cart.push({ name, price });
      alert(`${name} added to cart`);
    }

    function openCart() {
      const cartItems = document.getElementById('cartItems');
      const cartTotal = document.getElementById('cartTotal');
      cartItems.innerHTML = '';
      let total = 0;
      cart.forEach(item => {
        const li = document.createElement('li');
        li.textContent = `${item.name} - $${item.price}`;
        cartItems.appendChild(li);
        total += item.price;
      });
      cartTotal.textContent = `Total: $${total}`;
      document.getElementById('cartModal').classList.add('active');
    }

    function closeCart() {
      document.getElementById('cartModal').classList.remove('active');
    }
  </script>
</body>
</html>
